<div class="page-header">
  <h1><%= @blog.title %></h1>
  <div class="meta">Published: <%= @blog.created_at.strftime("%A, %b, %d, %Y") %> </div>
</div>

<div class="entry">
  <%= @blog.body %>
</div>
<hr>
<%= link_to 'Edit', edit_blog_path(@blog), class: 'btn btn-primary' if logged_in?(:site_admin) %>
<%= link_to 'Back', blogs_path, class: 'btn btn-info' %>

<% unless current_user.is_a? GuestUser %>
  <%= form_for @comment, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>

<hr>
<%= render @blog.comments %>
