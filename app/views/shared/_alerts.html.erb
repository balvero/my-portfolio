<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Noobita", sticky: false) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Noobita", sticky: false) %>
<% else flash[:error] %>
    <%= js add_gritter(flash[:notice], title: "Noobita", sticky: false) %>
<% end %>