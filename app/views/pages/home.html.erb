<div class="jumbotron">
  <div class="container-fluid bd">
    <h1 class="display-3">Web Developer</h1>
    <p>Responsive Web Design, Landing Page, Rails, Python, WordPress</p>
    <p><%= link_to 'About Me', about_path , class: 'btn btn-primary btn-lg' %></p>
  </div>
</div>
<div class="container">
 <h2 class="center">Latest Work</h2>
<div class="row">

  <% @portfolio.each_with_index do |portfolio_item, i| %>

      <div class="col-6" data-id="<%= portfolio_item.id %>">
        <div class="portfolio-item">
          <div class="overlay"></div>
          <%= link_to image_tag(portfolio_img(portfolio_item.thumbnail, 'thumbnail')) , portfolio_show_path(portfolio_item) %>
          <div class="portfolio-summary">
            <%= link_to portfolio_item.title , portfolio_show_path(portfolio_item), class: 'portfolio title' %>
            <div class="portfolio-subtitle"><%= portfolio_item.subtitle %></div>
            <%= link_to 'Edit', edit_portfolio_path(portfolio_item), class: 'btn-info btn-sm' if logged_in?(:site_admin) %>
            <%= link_to 'Delete', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger btn-sm'  if logged_in?(:site_admin)%>
          </div>
        </div>

      </div>

  <% end %>
</div>

</div>
