<%= form_for(@portfolio) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 10 %>
    </div>

    <div class="form-group">
      <%= f.label :main_image %>
      <%= f.text_field :main_image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :thumbnail %>
      <%= f.text_field :thumbnail, class: 'form-control' %>
    </div>

    <h3 class="title">Technologies</h3>

      <%= f.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: 'form-control' %>
      </div>
      <% end %>
    </ul>

    <div class="actions">
      <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
    </div>
<% end %>
