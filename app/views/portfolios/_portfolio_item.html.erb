<h3><%= link_to portfolio_item.title , portfolio_show_path(portfolio_item) %></h3>
<p><em><%= portfolio_item.subtitle %></em></p>
<%= image_tag portfolio_item.thumbnail unless portfolio_item.thumbnail.nil?  %>
<div><%= portfolio_item.body %></div>
<%= link_to 'Edit', edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
<%= link_to 'Delete', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }  if logged_in?(:site_admin)%>

<hr>